<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CPCSharp.App.ViewModels;assembly=CPCSharp.App"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="CPCSharp.App.Views.MainWindow" 
        xmlns:pages="clr-namespace:CPCSharp"
        Title="CPCSharp"
        Width="800"
        Height="600"
        Icon="/Assets/appicon.ico"
        MaxWidth="800" MaxHeight="600" MinWidth="800" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <StackPanel>
        <Border Background="Black" BorderBrush="Gainsboro" BorderThickness="1">
            <Image Stretch="Fill" Width="800" Height="600" Source="{Binding ScreenBitmap}" />
        </Border>
    </StackPanel>
</Window>
